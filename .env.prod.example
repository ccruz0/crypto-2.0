# ============================================
# PRODUCTION ENVIRONMENT (AWS)
# ============================================
# Copy this file to .env.aws (or .env.prod) and fill in your values
# DO NOT commit .env.aws to git (it's in .gitignore)
#
# ⚠️  WARNING: This is PRODUCTION configuration
# - Double-check all values before deploying
# - Use strong passwords and secrets
# - Verify Telegram channel ID is correct
# - Ensure LIVE_TRADING is set correctly
# - Test in staging first!

# Environment
ENVIRONMENT=aws
APP_ENV=aws
RUNTIME_ORIGIN=AWS

# Database (production database credentials)
POSTGRES_DB=atp
POSTGRES_USER=trader
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DATABASE_URL=postgresql://trader:CHANGE_ME_STRONG_PASSWORD@db:5432/atp

# API URLs (production domain/IP)
API_BASE_URL=http://backend-aws:8002
FRONTEND_URL=https://dashboard.hilovivo.com
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_ENVIRONMENT=aws

# Telegram (production channel - verify this is correct!)
TELEGRAM_BOT_TOKEN=YOUR_PRODUCTION_BOT_TOKEN
TELEGRAM_CHAT_ID=839853931
TELEGRAM_CHAT_ID_AWS=839853931
RUN_TELEGRAM=true

# Trading Configuration (PRODUCTION - real trading enabled!)
LIVE_TRADING=true
USE_CRYPTO_PROXY=false
CRYPTO_PROXY_URL=
CRYPTO_PROXY_TOKEN=

# Exchange API (production credentials)
EXCHANGE_CUSTOM_BASE_URL=https://api.crypto.com/exchange/v1
CRYPTO_REST_BASE=https://api.crypto.com/exchange/v1
EXCHANGE_CUSTOM_API_KEY=YOUR_PRODUCTION_API_KEY
EXCHANGE_CUSTOM_API_SECRET=YOUR_PRODUCTION_API_SECRET

# Security (generate a unique strong secret key)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_STRONG_SECRET_KEY

# Backend Configuration
DISABLE_AUTH=false
ENABLE_CORS=1
UVICORN_WORKERS=1

# Node Environment
NODE_ENV=production

# Build fingerprint (set during build)
GIT_SHA=
BUILD_TIME=

# Admin Actions Key (if used)
ADMIN_ACTIONS_KEY=CHANGE_ME_IF_USED
