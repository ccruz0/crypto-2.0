# ============================================
# STAGING ENVIRONMENT (AWS)
# ============================================
# Copy this file to .env.staging and fill in your values
# DO NOT commit .env.staging to git (it's in .gitignore)
#
# NOTE: Staging uses the same AWS instance but with staging-specific configuration
# You can use a separate AWS instance for staging if preferred

# Environment
ENVIRONMENT=aws
APP_ENV=staging
RUNTIME_ORIGIN=AWS

# Database (use staging database credentials)
POSTGRES_DB=atp_staging
POSTGRES_USER=trader_staging
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DATABASE_URL=postgresql://trader_staging:CHANGE_ME_STRONG_PASSWORD@db:5432/atp_staging

# API URLs (staging instance URL)
API_BASE_URL=http://YOUR_STAGING_IP:8002
FRONTEND_URL=http://YOUR_STAGING_IP:3000
NEXT_PUBLIC_API_URL=http://YOUR_STAGING_IP:8002/api
NEXT_PUBLIC_ENVIRONMENT=staging

# Telegram (use staging Telegram channel)
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_STAGING_CHAT_ID
RUN_TELEGRAM=true

# Trading Configuration (be careful - staging should use testnet/sandbox if available)
LIVE_TRADING=false
USE_CRYPTO_PROXY=false
CRYPTO_PROXY_URL=
CRYPTO_PROXY_TOKEN=

# Exchange API (staging/testnet credentials if available)
EXCHANGE_CUSTOM_BASE_URL=https://api.crypto.com/exchange/v1
EXCHANGE_CUSTOM_API_KEY=YOUR_STAGING_API_KEY
EXCHANGE_CUSTOM_API_SECRET=YOUR_STAGING_API_SECRET

# Security (generate a unique secret key for staging)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_STRONG_SECRET_KEY

# Backend Configuration
DISABLE_AUTH=false
ENABLE_CORS=1

# Node Environment
NODE_ENV=production
