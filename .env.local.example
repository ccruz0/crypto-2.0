# ============================================
# LOCAL DEVELOPMENT ENVIRONMENT
# ============================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to git (it's in .gitignore)

# Environment
ENVIRONMENT=local
APP_ENV=local
RUNTIME_ORIGIN=LOCAL

# Database (default values, adjust if needed)
POSTGRES_DB=atp
POSTGRES_USER=trader
POSTGRES_PASSWORD=traderpass
DATABASE_URL=postgresql://trader:traderpass@db:5432/atp

# API URLs (local development)
API_BASE_URL=http://localhost:8002
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8002/api
NEXT_PUBLIC_ENVIRONMENT=local

# Telegram (DISABLED for local dev - set to empty or false to prevent accidental alerts)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
RUN_TELEGRAM=false

# Trading Configuration (use proxy for local dev if needed)
LIVE_TRADING=false
USE_CRYPTO_PROXY=true
CRYPTO_PROXY_URL=http://host.docker.internal:9000
CRYPTO_PROXY_TOKEN=CRYPTO_PROXY_SECURE_TOKEN_2024

# Exchange API (only if not using proxy)
EXCHANGE_CUSTOM_BASE_URL=https://api.crypto.com/exchange/v1
EXCHANGE_CUSTOM_API_KEY=
EXCHANGE_CUSTOM_API_SECRET=

# Security (generate a new secret key for local dev)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-local-dev-secret-key-here

# Backend Configuration
DISABLE_AUTH=true
ENABLE_CORS=1

# Node Environment
NODE_ENV=development
